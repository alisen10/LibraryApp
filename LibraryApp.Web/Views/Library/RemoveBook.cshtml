@{
    ViewBag.Title = "RemoveBook";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Remove Book</h2>

                <form method="post" asp-controller="Library" asp-action="RemoveBook">
                    <div class="mb-3">
                        <label class="form-label">Book's Name</label>
                        <input type="text" name="name" class="form-control" required />
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success">Remove</button>
                    </div>
                </form>

                <div class="text-center mt-3">
                    <a asp-action="Index" class="btn btn-link">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
