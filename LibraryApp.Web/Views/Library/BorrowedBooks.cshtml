@model List<LibraryApp.Models.BorrowedBookDisplay>
@{
    ViewData["Title"] = "Borrowed Books";
}
<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">ðŸ“š All Borrowed Books</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No borrowed books found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>User Full Name</th>
                        <td>User Name</td>
                        <th>Book Name</th>
                        <th>Borrow Date</th>
                        <th>Due Date</th>
                        <th>Return Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        @if (!item.IsReturned){
                        <tr>
                            <td>@item.FullName</td>
                            <td>@item.Username</td>
                            <td>@item.BookName</td>
                            <td>@item.BorrowDate.ToString("dd.MM.yyyy")</td>
                            <td>@(item.DueDate?.ToString("dd.MM.yyyy") ?? "-")</td>
                            <td>@(item.ReturnDate?.ToString("dd.MM.yyyy") ?? "-")</td>
                            <td>
                                <span class="badge bg-warning text-dark">Not Returned</span>
                            </td>
                        </tr>
                    }}
                </tbody>
            </table>
        </div>
        
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>User Full Name</th>
                        <td>User Name</td>
                        <th>Book Name</th>
                        <th>Borrow Date</th>
                        <th>Due Date</th>
                        <th>Return Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        @if (item.IsReturned)
                        {
                        <tr>
                            <td>@item.FullName</td>
                            <td>@item.Username</td>
                            <td>@item.BookName</td>
                            <td>@item.BorrowDate.ToString("dd.MM.yyyy")</td>
                            <td>@(item.DueDate?.ToString("dd.MM.yyyy") ?? "-")</td>
                            <td>@(item.ReturnDate?.ToString("dd.MM.yyyy") ?? "-")</td>
                            <td>
                                <span class="badge bg-success">Returned</span>
                            </td>
                        </tr>
                    }
                    }
                </tbody>
            </table>
        </div>
    }
</div>
